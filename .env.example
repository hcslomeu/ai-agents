# AI Agents Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Set to "true" to use local Ollama instead of OpenAI
# Ollama must be running on your host machine (not in Docker)
USE_OLLAMA=false
# Suppress litellm logging errors
LITELLM_LOG=ERROR

# OpenAI API Key (required if USE_OLLAMA=false)
# gpt-4o-mini is recommended for cost efficiency (~$0.15/1M input tokens)
OPENAI_API_KEY=sk-...

# =============================================================================
# LangChain Tools & Services
# =============================================================================

# Tavily Search API (for web search tools)
TAVILY_API_KEY=tvly-...

# LangSmith (for tracing and observability)
LANGSMITH_API_KEY=lsv2_...
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=ai-agents

# =============================================================================
# Database (optional - for PostgreSQL container)
# =============================================================================

POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_agents
