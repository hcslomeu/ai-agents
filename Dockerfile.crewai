# CrewAI Environment
# Uses OpenAI 1.x (required by CrewAI)

FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy and install requirements
COPY requirements/crewai.txt requirements.txt
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# Copy source code
COPY src/ ./src/

# Default port for Streamlit
EXPOSE 8501

# Default: bash shell for interactive use
# Override with: docker compose run crewai python src/crewai_examples/script.py
CMD ["/bin/bash"]
